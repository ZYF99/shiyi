<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/common_scrollview"
    android:orientation="vertical">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@color/color_1869B0"
            android:layout_width="match_parent"
            android:layout_height="152dp"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="26dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <ImageView
                    android:id="@+id/iv_mine_userlogo"
                    android:src="@drawable/icon_def_avatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="18sp"
                        android:includeFontPadding="false"
                        android:id="@+id/tv_mine_username"
                        android:textColor="@color/white"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        android:includeFontPadding="false"
                        android:id="@+id/tv_mine_id"
                        android:textColor="@color/white"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="25dp"
                app:divider="@drawable/line_f4f4f4_v"
                app:showDividers="middle"
                android:background="@drawable/shape_white_r8_bg"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/lly_mine_account"
                    android:paddingLeft="8dp"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    app:divider="@drawable/line_f4f4f4_h"
                    app:showDividers="middle"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="44dp">
                    <ImageView
                        android:layout_marginRight="8dp"
                        android:src="@drawable/icon_mine_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:drawableRight="@drawable/icon_next"
                        android:textColor="@color/color_2D2D2D"
                        android:textSize="14sp"
                        android:text="个人信息"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/lly_mine_reset_pwd"
                    android:paddingLeft="8dp"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    app:divider="@drawable/line_f4f4f4_h"
                    app:showDividers="middle"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="44dp">
                    <ImageView
                        android:layout_marginRight="8dp"
                        android:src="@drawable/icon_mine_reset_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:drawableRight="@drawable/icon_next"
                        android:textColor="@color/color_2D2D2D"
                        android:textSize="14sp"
                        android:text="修改密码"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/lly_mine_service"
                    android:paddingLeft="8dp"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    app:divider="@drawable/line_f4f4f4_h"
                    app:showDividers="middle"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="44dp">
                    <ImageView
                        android:layout_marginRight="8dp"
                        android:src="@drawable/icon_mine_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:drawableRight="@drawable/icon_next"
                        android:textColor="@color/color_2D2D2D"
                        android:textSize="14sp"
                        android:text="客服电话"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/lly_mine_version"
                    android:paddingLeft="8dp"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    app:divider="@drawable/line_f4f4f4_h"
                    app:showDividers="middle"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="44dp">
                    <ImageView
                        android:layout_marginRight="8dp"
                        android:src="@drawable/icon_mine_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_mine_version"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_2D2D2D"
                        android:textSize="14sp"
                        android:text="版本V1.0"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:textColor="@color/color_CA5370"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/shape_white_r8_bg"
                android:id="@+id/tv_mine_logout"
                android:textSize="14sp"
                android:text="退 出 登 录"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>