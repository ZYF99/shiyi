<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.mine.resetpwd.ResetPwdActivity">
    <include layout="@layout/common_navbar"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        app:divider="@drawable/line_f4f4f4_v"
        app:showDividers="middle"
        android:background="@drawable/shape_white_r8_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="14sp"
            android:hint="请输入原密码"
            android:textColorHint="@color/color_DADADA"
            android:textColor="@color/color_2D2D2D"
            android:background="@color/transparent"
            android:id="@+id/edt_reset_pwd_old"
            android:layout_width="match_parent"
            android:layout_height="44dp"/>
        <EditText
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="14sp"
            android:hint="请输入新密码"
            android:textColorHint="@color/color_DADADA"
            android:textColor="@color/color_2D2D2D"
            android:background="@color/transparent"
            android:id="@+id/edt_reset_pwd_new1"
            android:layout_width="match_parent"
            android:layout_height="44dp"/>
        <EditText
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="14sp"
            android:hint="请输入确认新密码"
            android:textColorHint="@color/color_DADADA"
            android:textColor="@color/color_2D2D2D"
            android:background="@color/transparent"
            android:id="@+id/edt_reset_pwd_new2"
            android:layout_width="match_parent"
            android:layout_height="44dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="确认修改密码"
        android:textColor="@color/color_CA5370"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/shape_white_r8_bg"
        android:id="@+id/tv_reset_pwd_submit"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>
</LinearLayout>