<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/common_navbar"/>
    <androidx.core.widget.NestedScrollView
        style="@style/common_scrollview">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_margin="10dp"
            app:divider="@drawable/line_f4f4f4_v"
            app:showDividers="middle"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/shape_white_r8_bg"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rly_userinfo_logo"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_858585"
                    android:textSize="14sp"
                    android:text="头像"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/iv_account_info_logo"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_def_avatar"
                    android:layout_width="29dp"
                    android:layout_height="29dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_858585"
                    android:textSize="14sp"
                    android:text="姓名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:gravity="center_vertical|right"
                    android:layout_marginLeft="10dp"
                    android:background="@color/transparent"
                    android:id="@+id/edt_account_info_name"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_2D2D2D"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_858585"
                    android:textSize="14sp"
                    android:text="年龄"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:inputType="number"
                    android:gravity="center_vertical|right"
                    android:layout_marginLeft="10dp"
                    android:background="@color/transparent"
                    android:id="@+id/edt_account_info_age"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_2D2D2D"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_858585"
                    android:textSize="14sp"
                    android:text="性别"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:inputType="number"
                    android:gravity="center_vertical|right"
                    android:layout_marginLeft="10dp"
                    android:background="@color/transparent"
                    android:id="@+id/tv_account_info_gender"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_2D2D2D"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_858585"
                    android:textSize="14sp"
                    android:text="手机"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:gravity="center_vertical|right"
                    android:layout_marginLeft="10dp"
                    android:background="@color/transparent"
                    android:id="@+id/edt_account_info_phone"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_2D2D2D"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_858585"
                    android:textSize="14sp"
                    android:text="职称"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:gravity="center_vertical|right"
                    android:layout_marginLeft="10dp"
                    android:background="@color/transparent"
                    android:id="@+id/edt_account_info_job"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_2D2D2D"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>